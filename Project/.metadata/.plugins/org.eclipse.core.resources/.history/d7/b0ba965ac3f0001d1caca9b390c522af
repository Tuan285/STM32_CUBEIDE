/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi1;

TIM_HandleTypeDef htim2;
TIM_HandleTypeDef htim4;

UART_HandleTypeDef huart1;

/* USER CODE BEGIN PV */

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_SPI1_Init(void);
static void MX_TIM2_Init(void);
static void MX_USART1_UART_Init(void);
static void MX_TIM4_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
uint8_t giatien, chotrong;
uint8_t cb1, cb2, cb3, cb4;
uint64_t t_prev, t_prev2, t_prev3;
uint8_t tt, status, status1;
uint8_t num;
uint8_t CardID[5];
uint8_t CardIDs[5];
uint8_t MyID1[5] = { 0x26, 0x91, 0x95, 0x94, 0x83 };
uint8_t MyID2[5] = { 0x26, 0x94, 0xb7, 0x7f, 0xb1 };
uint8_t MyID3[5] = { 0x26, 0xaa, 0x16, 0xad, 0xe2 };
uint8_t MyID4[5] = { 0x26, 0xb4, 0x1, 0x96, 0xe0 };
uint8_t bufferTx[20];
uint8_t the[4];
void servo_in_ON() {
	__HAL_TIM_SET_COMPARE(&htim4, TIM_CHANNEL_3, 750);  // duty cycle is 2ms
}
void servo_in_OFF() {
	__HAL_TIM_SET_COMPARE(&htim4, TIM_CHANNEL_3, 250);  // duty cycle is 1 ms
}
void servo_out_ON() {
	__HAL_TIM_SET_COMPARE(&htim4, TIM_CHANNEL_4, 750);  // duty cycle is 2ms
}
void servo_out_OFF() {
	__HAL_TIM_SET_COMPARE(&htim4, TIM_CHANNEL_4, 250);  // duty cycle is 1 ms
}
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_SPI1_Init();
  MX_TIM2_Init();
  MX_USART1_UART_Init();
  MX_TIM4_Init();
  /* USER CODE BEGIN 2 */
	TM_MFRC522_Init();
	HAL_TIM_PWM_Start(&htim4, TIM_CHANNEL_3);
	HAL_TIM_PWM_Start(&htim4, TIM_CHANNEL_4);
	HAL_GPIO_WritePin(LED_GPIO_Port, LED_Pin, 1);
	t_prev2 = HAL_GetTick();
	t_prev3 = HAL_GetTick();
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
	while (1) {

		// xe dap 2000 xe may 5000 oto 7000
		cb1 = HAL_GPIO_ReadPin(CB1_GPIO_Port, CB1_Pin);
		cb2 = HAL_GPIO_ReadPin(CB2_GPIO_Port, CB2_Pin);
		cb3 = HAL_GPIO_ReadPin(CB3_GPIO_Port, CB3_Pin);
		cb4 = HAL_GPIO_ReadPin(CB4_GPIO_Port, CB4_Pin);
		if (HAL_GetTick() - t_prev3 >= 200) {
			chotrong = cb1 + cb2 + cb3 + cb4;
			sprintf((char*) bufferTx, "%d/%d/%d/%d/%d/%d\n", cb1, cb2, cb3, cb4,
					giatien, chotrong);
			HAL_UART_Transmit(&huart1, bufferTx, strlen((char*) bufferTx),
					1000);
		}
		if (status == 0) {
			if (!TM_MFRC522_Request(PICC_REQIDL, CardID)) {
				if (!TM_MFRC522_Anticoll(CardID)) {
					HAL_GPIO_WritePin(LED_GPIO_Port, LED_Pin, 0);
					if (TM_MFRC522_Compare(CardID, MyID1) == MI_OK) {
						if (TM_MFRC522_Compare(CardID, MyID1) == MI_OK) {
							tt = 1;
							the[0]++;
							if (the[0] == 1) {
								status = 1;
								servo_in_ON();
							} else if (the[0] > 1) {
								giatien = 2;
								status1 = 1;
								servo_out_ON();
								the[0] = 0;
							}
							num = 1;
						}
					}
					if (TM_MFRC522_Compare(CardID, MyID2) == MI_OK) {
						tt = 1;
						if (the[1] == 1) {
							giatien = 5;
							status1 = 1;
							the[1] = 0;
							servo_out_ON();
						} else {
							status = 1;
							servo_in_ON();
						}
						the[1]++;
						num = 2;
					}
					if (TM_MFRC522_Compare(CardID, MyID3) == MI_OK) {
						tt = 1;
						if (the[2] == 1) {
							giatien = 7;
							status1 = 1;
							the[2] = 0;
							servo_out_ON();
						} else {
							status = 1;
							servo_in_ON();
						}
						the[2]++;
						num = 3;
					}
					if (TM_MFRC522_Compare(CardID, MyID4) == MI_OK) {
						tt = 1;
						if (the[3] == 1) {
							giatien = 2;
							status1 = 1;
							the[3] = 0;
							servo_out_ON();
						} else {
							status = 1;
							servo_in_ON();
						}
						the[3]++;
						num = 4;
					}
					memset(CardID, 0, strlen((char*) CardID));
					t_prev2 = HAL_GetTick();
				}
			}
		}
		//servo_off:
		if (tt == 1) {
			if (HAL_GetTick() - t_prev2 >= 3000) {
				HAL_GPIO_WritePin(LED_GPIO_Port, LED_Pin, 1);
				if (status == 1) {
					servo_in_OFF();
					status = 0;
				} else if (status1 == 1) {
					giatien = 0;
					servo_out_OFF();
					status1 = 0;
				}
				tt = 0;
			}
		}
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
	}
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSE;
  RCC_OscInitStruct.HSEState = RCC_HSE_ON;
  RCC_OscInitStruct.HSEPredivValue = RCC_HSE_PREDIV_DIV1;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSE;
  RCC_OscInitStruct.PLL.PLLMUL = RCC_PLL_MUL2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }
  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV2;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
  {
    Error_Handler();
  }
}

